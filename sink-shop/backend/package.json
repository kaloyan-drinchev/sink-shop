{
  "name": "sink-shop-backend",
  "version": "1.0.0",
  "description": "Backend API for Artindo Home",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "tsx src/scripts/migrate-new-products.ts",
    "db:create-admin": "tsx src/scripts/create-admin-user.ts",
    "db:generate-river-stones": "tsx src/scripts/generate-river-stone-products.ts",
    "db:generate-fossils": "tsx src/scripts/generate-fossil-products.ts",
    "db:generate-all-products": "npm run db:generate-river-stones && npm run db:generate-fossils",
    "db:setup": "npm run db:migrate && npm run db:create-admin && npm run db:generate-all-products",
    "db:update-prices": "tsx src/scripts/update-prices-to-300.ts",
    "db:fix-capitalization": "tsx src/scripts/fix-manufacture-capitalization.ts"
  },
  "dependencies": {
    "@types/nodemailer": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.6",
    "pg": "^8.11.3",
    "stripe": "^14.9.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.20.5",
    "typescript": "^5.3.0"
  }
}
